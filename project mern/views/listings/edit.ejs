<% layout("/layouts/boilerplate") -%>
<body>
    <h3> Edit this listing</h3>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
            <br>

    <form method="post" action="/listings/<%=showListings._id%>?_method=PATCH">
        <div class="mb-3">
            <label for="tittle" class="form-label">Title</label>
            <input type="text"class="form-control" value="<%=showListings.title%>" name="Listing[title]">
          </div>
          <div class="mb-3">
            <label for="decription" class="form-label">Decription</label>
            <textarea name="Listing[description]" class="form-control"> <%=showListings.description%></textarea>
          </div>
<div class="mb-3">
    <label for="image" class="form-label">Image</label>
    <input  name="Listing[image]"  class="form-control" value="<%=showListings.image%>">
</div>
<div class="row">
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="Listing[price]"  class="form-control"  value="<%=showListings.price%>" type="number">
    
       </div>
      <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location</label>
        <input  name="Listing[location]"  class="form-control"  value="<%=showListings.location%>" type="text">
    
      </div>
</div>
  
  <div class="mb-3">
    <label for="country" class="form-label">Country</label>
    <input name="Listing[country]" class="form-control" value="<%=showListings.country%>">

  </div>
    
    <button class="btn btn-dark edit-btn">edit</button>
    </form>
    <br><br>
        </div>

            </div>

</body>
